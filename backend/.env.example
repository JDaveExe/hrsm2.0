# HRSM 2.0 Backend Environment Configuration
# Copy this file to .env and update the values

# JWT & Security Configuration
JWT_SECRET=healthcare_super_secret_key_2025_production_ready_64_characters_minimum
SESSION_SECRET=another_super_secret_key_for_sessions_64_characters_minimum
BCRYPT_ROUNDS=12

# Database Configuration  
DB_NAME=hrsm_database
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_HOST=localhost
DB_PORT=3306

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security & Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# SMS Service Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=http://localhost:5000/api/notifications/sms-delivery-status

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM_NAME=Maybunga Health Center

# Alternative Email Services (uncomment to use)
# EMAIL_SERVICE=outlook
# EMAIL_SERVICE=smtp

# SMTP Configuration (if using custom SMTP)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=true

# Notification Service Settings
NOTIFICATION_MODE=development
# NOTIFICATION_MODE=production

# Development Settings
ENABLE_SMS_MOCK=true
ENABLE_EMAIL_MOCK=false
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=hrsm_notifications
# DB_USER=root
# DB_PASS=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/notifications.log
